<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.addBlog.TambahBlogActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tBagian_div_footer"
                android:orientation="vertical">

                <include layout="@layout/layout_toolbar"
                    android:id="@+id/toolbar"/>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_16sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:background="@drawable/background_border_abu">


                            <ImageView
                                android:id="@+id/tBagian_iv_cover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:src="@drawable/img_upload_new" />

                            <ImageView
                                android:id="@+id/iv_delete_cover"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_baseline_delete_24"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/body10"
                                android:layout_height="wrap_content"
                                android:text="@string/teks_judul" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:background="@drawable/background_border"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingRight="@dimen/_6sdp"
                                android:paddingBottom="@dimen/_10sdp">

                                <EditText
                                    android:id="@+id/edt_judul"
                                    style="@style/editTextEntryName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:background="@color/transparant"
                                    android:gravity="center_vertical"
                                    android:hint="@string/teks_dummy_judul_blog"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/dark"
                                    android:textColorHint="@color/abu1"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/body10"
                                android:text="@string/teks_isi" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:background="@drawable/background_border"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_6sdp"
                                android:paddingBottom="@dimen/_10sdp">

                                <EditText
                                    android:id="@+id/edt_isi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:background="@color/transparant"
                                    android:gravity="start"
                                    android:hint="@string/teks_tuliskan_cerita_anda"
                                    android:lines="15"
                                    android:textColor="@color/dark"
                                    android:textColorHint="@color/abu1"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tBagian_div_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tBagian_tv_jmlKata"
                    style="@style/body10"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/_0_kata" />

                <RelativeLayout
                    android:id="@+id/tBagian_div_align"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_41sdp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:background="@drawable/background_shape_accent"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">

                        <RelativeLayout
                            android:id="@+id/action_bold"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_align_bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/action_italic"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_align_italic" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/action_underline"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_align_underline" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/action_align_left"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_align_left" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/action_align_center"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_align_center" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/action_align_right"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_align_right" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/action_insert_image"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_fi_br_picture" />

                        </RelativeLayout>


                    </LinearLayout>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_segitiga" />

                </RelativeLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:elevation="@dimen/_3sdp"
                    android:paddingHorizontal="@dimen/_16sdp">


                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/btn_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/background_shape_primary"
                        android:text="Publish"
                        android:textAllCaps="false" />

                </LinearLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/tBagian_div_mainEditor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/undo" />

                    <ImageButton
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/redo" />

                    <ImageButton
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"/>

                    <ImageButton
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/italic" />


                    <ImageButton
                        android:id="@+id/action_strikethrough"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/strikethrough" />

                    <ImageButton
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/underline" />


                    <ImageButton
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/justify_left" />

                    <ImageButton
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/justify_center" />

                    <ImageButton
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/justify_right" />

                    <ImageButton
                        android:id="@+id/action_insert_bullets"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"/>

                    <ImageButton
                        android:id="@+id/action_insert_numbers"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/numbers" />

                    <ImageButton
                        android:id="@+id/action_blockquote"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null" />

                    <ImageButton
                        android:visibility="gone"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/insert_image" />


                </LinearLayout>
            </HorizontalScrollView>

        </RelativeLayout>
    </LinearLayout>
</layout>