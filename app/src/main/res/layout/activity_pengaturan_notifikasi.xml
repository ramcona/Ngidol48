<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.pengaturan.PengaturanNotifikasiActivity">
        <include layout="@layout/layout_toolbar"
            android:id="@+id/toolbar"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/title12"
                            android:text="@string/teks_informasi"/>
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            style="@style/body10"
                            android:text="@string/teks_deskripsi_informasi"/>
                    </LinearLayout>
                    <Switch
                        android:id="@+id/switch_news"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/title12"
                            android:text="@string/teks_event"/>
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            style="@style/body10"
                            android:text="@string/teks_deskripsi_notifikasi_event"/>
                    </LinearLayout>
                    <Switch
                        android:id="@+id/switch_event"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/title12"
                            android:text="@string/teks_handshake_vc"/>
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            style="@style/body10"
                            android:text="@string/teks_deskripsi_notifikasi_handshake"/>
                    </LinearLayout>
                    <Switch
                        android:id="@+id/switch_handshake"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/title12"
                            android:text="@string/teks_mng_vc"/>
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            style="@style/body10"
                            android:text="@string/teks_deskripsi_notifikasi_handshake"/>
                    </LinearLayout>
                    <Switch
                        android:id="@+id/switch_mng"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/title12"
                            android:text="@string/teks_showroom"/>
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            style="@style/body10"
                            android:text="@string/teks_deskripsi_notifikasi_handshake"/>
                    </LinearLayout>
                    <Switch
                        android:id="@+id/switch_showroom"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>