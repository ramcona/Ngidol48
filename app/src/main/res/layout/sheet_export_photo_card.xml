<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="7dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_shape_pink" />

            <TextView
                style="@style/body12"
                android:text="Photocard dan ucapan anda berhasil diunduh, silahkan periksa galeri anda. Terimakasih sudah berpartisipasi "/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_kembali"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/background_border_primary"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                style="@style/title10"
                android:text="Kembali"/>

            <TextView
                android:id="@+id/tv_bagikan"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/background_shape_primary"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                style="@style/title10"
                android:text="Bagikan"/>
        </LinearLayout>

    </LinearLayout>
</layout>