<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/_70sdp"
                android:layout_height="7dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/background_shape_pink" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        app:civ_border_color="@color/pink"
                        android:id="@+id/iv_ava"
                        app:civ_border_width="@dimen/_1sdp"
                        android:src="@drawable/ic_women"
                        android:layout_width="@dimen/_105sdp"
                        android:layout_height="@dimen/_105sdp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:background="@drawable/background_shape_pink"
                        android:layout_marginHorizontal="@dimen/_2sdp"
                        android:textAlignment="center"
                        android:id="@+id/tv_team"
                        android:textColor="@color/colorPrimaryTeks"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center"
                        style="@style/body10"
                        android:text="@string/app_name"/>
                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:textAlignment="center"
                        android:id="@+id/tv_nama"
                        android:textColor="@color/colorPrimaryTeks"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center"
                        style="@style/title12"
                        android:text="@string/app_name"/>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/_105sdp"
                            style="@style/body12"
                            android:text="@string/teks_nama_panggilan"/>

                        <TextView
                            android:layout_marginStart="@dimen/_10sdp"
                            android:id="@+id/tv_panggilan"
                            style="@style/title12"
                            android:text="@string/teks_nama_panggilan"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:width="@dimen/_105sdp"
                            style="@style/body12"
                            android:text="@string/teks_tanggal_lahir"/>

                        <TextView
                            android:layout_marginStart="@dimen/_10sdp"
                            android:id="@+id/tv_tanggal_lahir"
                            style="@style/title12"
                            android:text="@string/teks_tanggal_lahir"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:width="@dimen/_105sdp"
                            style="@style/body12"
                            android:text="@string/teks_golongan_darah"/>

                        <TextView
                            android:layout_marginStart="@dimen/_10sdp"
                            android:id="@+id/tv_gol_darah"
                            style="@style/title12"
                            android:text="@string/teks_tanggal_lahir"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:width="@dimen/_105sdp"
                            style="@style/body12"
                            android:text="@string/teks_horoskop"/>

                        <TextView
                            android:layout_marginStart="@dimen/_10sdp"
                            android:id="@+id/tv_horoskop"
                            style="@style/title12"
                            android:text="@string/teks_tanggal_lahir"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:width="@dimen/_105sdp"
                            style="@style/body12"
                            android:text="@string/teks_tinggi_badan"/>

                        <TextView
                            android:layout_marginStart="@dimen/_10sdp"
                            android:id="@+id/tv_tinggil"
                            style="@style/title12"
                            android:text="@string/teks_tanggal_lahir" />
                    </LinearLayout>

                    <!--sosial media-->
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lin_media"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/colorPrimaryTeks"
                            android:layout_marginTop="@dimen/_15sdp"
                            style="@style/title12"
                            android:text="@string/teks_media_sosial"/>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/lin_instagram"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/ic_instagram"/>
                                <TextView
                                    android:id="@+id/tv_instagram"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:text="@string/app_name"
                                    android:textColor="@color/colorPrimaryTeks"
                                    style="@style/body10"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lin_tiktok"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/ic_tiktok"/>
                                <TextView
                                    android:id="@+id/tv_tiktok"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:text="@string/app_name"
                                    android:textColor="@color/colorPrimaryTeks"
                                    style="@style/body10"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lin_twitter"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/ic_twitter"/>
                                <TextView
                                    android:id="@+id/tv_twitter"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:text="@string/app_name"
                                    android:textColor="@color/colorPrimaryTeks"
                                    style="@style/body10"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_showroom"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/background_border_primary"
                        android:textColor="@color/colorPrimaryTeks"
                        android:layout_marginTop="@dimen/_10sdp"
                        style="@style/title12"
                        android:text="@string/teks_buka_showroom"/>

                    <!--fanbase-->
                    <LinearLayout
                        android:visibility="gone"
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/background_shape_pink"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:id="@+id/lin_fans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/ic_fans"/>

                        <LinearLayout

                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_fanbase"
                                android:text="@string/app_name"
                                style="@style/title12"
                                android:textColor="@color/colorPrimaryTeks"/>

                            <TextView
                                android:id="@+id/tv_fanbase_visit"
                                android:padding="@dimen/_5sdp"
                                android:background="@drawable/background_border_primary"
                                android:textColor="@color/colorPrimaryTeks"
                                android:layout_marginTop="@dimen/_5sdp"
                                style="@style/body10"
                                android:text="@string/teks_kunjungi_fanbase"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>
</layout>