<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/viewGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.MainActivity">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--TOP VIEW-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_jkt48" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_setting"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/ic_setting" />

                            <RelativeLayout

                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp">

                                <ImageView
                                    android:id="@+id/ic_notification"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/ic_notification_primary" />

                                <RelativeLayout
                                    android:visibility="gone"
                                    android:id="@+id/div_jml_notif"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/img_circle">

                                    <TextView
                                        style="@style/body8"
                                        android:id="@+id/tv_jml_notif"
                                        android:layout_centerInParent="true"
                                        android:text="10"
                                        android:textColor="@color/white"/>

                                </RelativeLayout>

                            </RelativeLayout>
                        </LinearLayout>



                    </RelativeLayout>

                    <!--SLIDER-->
                    <androidx.viewpager.widget.ViewPager
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/slider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_165sdp"/>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/lin_user"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_avatar_user"
                            app:civ_border_color="@color/pink"
                            app:civ_border_width="@dimen/_1sdp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/ic_member"/>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_weight="1"
                             android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_10sdp">
                            <TextView
                                android:id="@+id/tv_nama"
                                android:textColor="@color/colorPrimary"
                                style="@style/title12"
                                android:text="@string/teks_dummy_halo"/>
                            <TextView
                                android:id="@+id/tv_body_nama"
                                android:textColor="@color/colorPrimary"
                                style="@style/body10"
                                android:text="@string/teks_ucakapan_pagi"/>
                        </LinearLayout>
                        <ImageView
                            android:src="@drawable/ic_baseline_chevron_right_24_primary"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_45sdp"/>
                    </LinearLayout>

                    <!--MENU-->
                    <LinearLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lin_kalender"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:padding="@dimen/_5sdp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_calendar"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"/>

                            <TextView
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                style="@style/title10"
                                android:text="@string/teks_kalender"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_all_news"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:padding="@dimen/_5sdp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_news"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"/>

                            <TextView
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                style="@style/title10"
                                android:text="@string/teks_informasi"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_setlist"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_playlist"
                                android:scaleType="centerInside"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"/>

                            <TextView
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                style="@style/title10"
                                android:text="@string/teks_lagu"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_member"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:padding="@dimen/_5sdp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_member"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"/>

                            <TextView
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                style="@style/title10"
                                android:text="@string/teks_member"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lin_handshake"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:padding="@dimen/_5sdp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_videocall"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"/>

                            <TextView
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                style="@style/title10"
                                android:textAlignment="center"
                                android:text="@string/teks_handshake_vc"/>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lin_blog"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:padding="@dimen/_5sdp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_blog"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"/>

                            <TextView
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                style="@style/title10"
                                android:textAlignment="center"
                                android:text="@string/teks_blog"/>
                        </LinearLayout>


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </LinearLayout>




                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lin_showroom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textColor="@color/colorPrimaryTeks"
                                android:layout_marginStart="@dimen/_15sdp"
                                style="@style/title12"
                                android:text="@string/teks_member_showroom_live"/>
                            <TextView
                                android:id="@+id/tv_jml_member"
                                android:textColor="@color/colorPrimaryTeks"
                                android:layout_marginStart="@dimen/_5sdp"
                                style="@style/title12"
                                android:text=""/>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lin_view_kosong_showroom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/ic_calendar"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/colorPrimaryTeks"
                                style="@style/body10"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:text="@string/teks_showroom_kosong"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_showroom"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/colorPrimaryTeks"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            style="@style/title12"
                            android:text="@string/teks_event_hari_ini"/>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lin_view_kosong_event"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/ic_calendar"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/colorPrimaryTeks"
                                style="@style/body10"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:text="@string/teks_event_kosong"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_event"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_bday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/colorPrimaryTeks"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            style="@style/title12"
                            android:text="@string/teks_member_ulangtahun"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_bday"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="@color/colorPrimaryTeks"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            style="@style/title14"
                            android:text="@string/teks_informasi"/>

                        <TextView
                            android:id="@+id/iv_semua_berita"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            style="@style/title10"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/teks_lihat_semua"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_berita"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:autoLink="web"
                        style="@style/body10"
                        android:text="Sumber jkt48.com\n Semua hak cipta milik JKT 48 atau pemilik aset asliknya"/>

                    <TextView
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:autoLink="web"
                        style="@style/body10"
                        android:text="@string/teks_app_versi"/>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rel_bday_ava"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_ava_bday"
                app:civ_border_color="@color/pink"
                app:civ_border_width="@dimen/_1sdp"
                android:src="@drawable/ic_women"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>

            <com.airbnb.lottie.LottieAnimationView
                app:lottie_rawRes="@raw/lottie_bday_dar"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"/>

            <ImageView
                android:id="@+id/iv_close_bd"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_close"/>
        </RelativeLayout>

    </RelativeLayout>
</layout>