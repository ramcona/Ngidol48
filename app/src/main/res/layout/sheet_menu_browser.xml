<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_20sdp"
            android:orientation="vertical">

            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="7dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_shape_pink" />

            <LinearLayout
                android:id="@+id/lin_refresh"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_baseline_refresh_24"/>
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_refresh"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    style="@style/body12"
                    android:text="@string/teks_muat_ulang"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_buka_browser"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_baseline_open_in_browser_24"/>
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_share"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    style="@style/body12"
                    android:text="@string/teks_buka_di_browser"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</layout>