<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.login.LoginActivity">
        <include layout="@layout/layout_toolbar"
            android:id="@+id/toolbar"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/img_logo" />

                <TextView
                    style="@style/headline2"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/teks_masuk_ke_ngidol48"
                    android:textAlignment="center" />

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/abu_pekat"
                    style="@style/body12"
                    android:text="@string/teks_selamat_datang_di_ngidol48"
                    />

                <RelativeLayout
                    android:id="@+id/login_btn_masuk_google"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                     android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/background_shape_white"
                    android:elevation="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            app:srcCompat="@drawable/ic_google" />

                        <TextView
                            style="@style/body12"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="start"
                            android:text="@string/teks_masuk_dengan_google"
                            android:textColor="@color/dark" />

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>