<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.photoCard.writeGreating.WriteGreatingPhotoCardActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_card_greating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                app:cardBackgroundColor="#F8AEDF"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_interindah"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/img_interindah" />

                    <TextView

                        android:id="@+id/tv_greating"
                        style="@style/headline3"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:text="Tulis Ucapan Anda"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/ave_fedan"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_card_photocard"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_160sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_photo_card"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_dummy_photo_card"/>

                    <ImageView
                        android:id="@+id/iv_selected_sign"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_sign"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/_5sdp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                style="@style/body10"
                android:text="Tulis Ucapan Anda"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/background_border"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_6sdp"
                android:paddingBottom="@dimen/_10sdp">

                <EditText
                    android:id="@+id/edt_greating"
                    style="@style/editTextEntryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/transparant"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="false"
                    android:textColorHint="@color/abu1"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

        </LinearLayout>


        <TextView

            android:id="@+id/btn_next"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_16sdp"
            style="@style/title12"
            android:text="@string/teks_selanjutnya"
            android:background="@drawable/background_shape_primary"/>

    </LinearLayout>
</layout>