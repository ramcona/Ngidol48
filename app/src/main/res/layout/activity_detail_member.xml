<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_background"
        tools:context=".ui.activity.detailMember.DetailMemberActivity">

        <include layout="@layout/layout_toolbar"
            android:id="@+id/toolbar"/>

        <androidx.core.widget.NestedScrollView
            style="@style/ContentMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:padding="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_margin="@dimen/_5sdp">
                        <ImageView
                            android:scaleType="fitCenter"
                            app:civ_border_color="@color/pink"
                            android:id="@+id/iv_ava"
                            app:civ_border_width="@dimen/_1sdp"
                            android:src="@drawable/ic_women"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/tv_nama"
                            android:textColor="@color/colorPrimaryTeks"
                            style="@style/title12"
                            android:text="@string/app_name"/>

                        <TextView

                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorPrimaryTeks"
                            android:id="@+id/tv_jiko"
                            style="@style/body10"
                            android:text="'-''"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/abu_pekat"
                            style="@style/title10"
                            android:text="@string/teks_jumlah_show"/>
                        <TextView
                            android:id="@+id/tv_show"
                            android:textColor="@color/colorPrimaryTeks"
                            style="@style/title12"
                            android:text="121"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:background="@color/abu1_tipis" />

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/abu_pekat"
                            style="@style/title10"
                            android:text="@string/teks_generasi"/>
                        <TextView
                            android:id="@+id/tv_generasi"
                            android:textColor="@color/colorPrimaryTeks"
                            style="@style/title12"
                            android:text="3"/>

                    </LinearLayout>

                    <View
                        android:layout_gravity="center"
                        android:background="@color/abu1_tipis"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_20sdp"/>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/abu_pekat"
                            style="@style/title10"
                            android:text="Status/Tim"/>
                        <TextView

                            android:id="@+id/tv_team"
                            android:textColor="@color/colorPrimaryTeks"
                            style="@style/title12"
                            android:text="Anggota JKT48"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/title14"
                    android:textColor="@color/colorPrimaryTeks"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="Biodata"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_nickname"/>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/abu_pekat"
                            android:layout_width="@dimen/_105sdp"
                            style="@style/body10"
                            android:text="@string/teks_nama_panggilan"/>

                        <TextView
                            android:id="@+id/tv_panggilan"
                            style="@style/title12"
                            android:text="@string/teks_nama_panggilan"/>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_birthdate"/>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/abu_pekat"
                            android:width="@dimen/_105sdp"
                            style="@style/body10"
                            android:text="@string/teks_tanggal_lahir"/>

                        <TextView
                            android:id="@+id/tv_tanggal_lahir"
                            style="@style/title12"
                            android:text="@string/teks_tanggal_lahir"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_blood"/>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/abu_pekat"
                            android:width="@dimen/_105sdp"
                            style="@style/body10"
                            android:text="@string/teks_golongan_darah"/>

                        <TextView
                            android:id="@+id/tv_gol_darah"
                            style="@style/title12"
                            android:text="@string/teks_tanggal_lahir"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_virgo"/>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/abu_pekat"
                            android:width="@dimen/_105sdp"
                            style="@style/body10"
                            android:text="@string/teks_horoskop"/>

                        <TextView
                            android:id="@+id/tv_horoskop"
                            style="@style/title12"
                            android:text="@string/teks_tanggal_lahir"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_height"/>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/abu_pekat"
                            android:width="@dimen/_105sdp"
                            style="@style/body10"
                            android:text="@string/teks_tinggi_badan"/>

                        <TextView
                            android:id="@+id/tv_tinggil"
                            style="@style/title12"
                            android:text="@string/teks_tanggal_lahir" />
                    </LinearLayout>
                </LinearLayout>


                <!--sosial media-->
                <LinearLayout
                    android:id="@+id/lin_media"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView

                        android:textColor="@color/colorPrimaryTeks"
                        android:layout_marginTop="@dimen/_15sdp"
                        style="@style/title14"
                        android:text="@string/teks_media_sosial"/>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lin_instagram"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/ic_instagram"/>
                            <TextView
                                android:singleLine="true"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:gravity="center"
                                android:id="@+id/tv_instagram"
                                android:layout_gravity="center"
                                android:text="@string/app_name"
                                android:textColor="@color/colorPrimaryTeks"
                                style="@style/body10"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_tiktok"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/ic_tiktok"/>
                            <TextView
                                android:singleLine="true"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:id="@+id/tv_tiktok"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:text="@string/app_name"
                                android:textColor="@color/colorPrimaryTeks"
                                style="@style/body10"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_twitter"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/ic_twitter"/>
                            <TextView
                                android:singleLine="true"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:id="@+id/tv_twitter"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:text="@string/app_name"
                                android:textColor="@color/colorPrimaryTeks"
                                style="@style/body10"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_showroom"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/background_border_primary"
                        android:textColor="@color/colorPrimaryTeks"
                        android:layout_marginTop="@dimen/_10sdp"
                        style="@style/title10"
                        android:text="@string/teks_buka_showroom"/>
                </LinearLayout>

                <!--fanbase-->
                <LinearLayout
                    android:visibility="gone"
                    android:padding="@dimen/_15sdp"
                    android:background="@drawable/background_shape_pink"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/lin_fans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_fans"/>

                    <LinearLayout

                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_fanbase"
                            android:text="@string/app_name"
                            style="@style/title12"
                            android:textColor="@color/colorPrimaryTeks"/>

                        <TextView
                            android:id="@+id/tv_fanbase_visit"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/background_border_primary"
                            android:textColor="@color/colorPrimaryTeks"
                            android:layout_marginTop="@dimen/_5sdp"
                            style="@style/body10"
                            android:text="@string/teks_kunjungi_fanbase"/>
                    </LinearLayout>
                </LinearLayout>


                <!--Jadwal-->
                <TextView
                    android:textColor="@color/colorPrimaryTeks"
                    android:layout_marginTop="@dimen/_15sdp"
                    style="@style/title14"
                    android:text="@string/teks_jadwal"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--handshake-->
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/lin_handshake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_videocall"/>

                        <TextView
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimaryTeks"
                            android:layout_marginStart="@dimen/_10sdp"
                            style="@style/title10"
                            android:text="Video Call"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:background="@color/abu1_tipis" />

                    <!--handshake-->
                    <LinearLayout
                        android:layout_marginStart="@dimen/_5sdp"
                        android:id="@+id/lin_mng"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_mng"/>

                        <TextView
                            android:textColor="@color/colorPrimaryTeks"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_gravity="center"
                            style="@style/title10"
                            android:text="Meet and Greet"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lin_jadwal_perform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/colorPrimaryTeks"
                        android:layout_marginTop="@dimen/_10sdp"
                        style="@style/title12"
                        android:text="@string/teks_jadwal_perform"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_data"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_event_home"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>