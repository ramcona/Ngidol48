<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_30sdp"
                    android:id="@+id/iv_pengguna"
                    android:layout_height="@dimen/_30sdp"
                    app:civ_border_width="1dp"
                    android:src="@drawable/ic_baseline_person_24"
                    app:civ_border_color="@color/abu1_tipis"/>

                <LinearLayout
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_nama_pengguna"
                        style="@style/body12"
                        android:text="Nama Pengguna"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_kategori"
                            android:textColor="@color/colorAccent"
                            style="@style/body10"
                            android:text="Kategori"/>
                        <TextView
                            android:layout_marginStart="@dimen/_2sdp"
                            android:id="@+id/tv_tanggal"
                            android:textColor="@color/abu_pekat"
                            style="@style/body10"
                            android:text="1 januari 2022"/>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_thumb"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/img_logo"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_judul"
                            style="@style/title12"
                            android:text="Judul Blog Postingan"/>

                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:maxLines="3"
                            android:id="@+id/tv_deskripsi"
                            style="@style/body10"
                            android:text="Judul Blog Postingan"/>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_comment"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"/>
                                <TextView
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:id="@+id/tv_total_komentar"
                                    style="@style/body8"
                                    android:text="12 Komentar"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



            <View
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/abu1_tipis"/>

        </LinearLayout>
    </LinearLayout>
</layout>